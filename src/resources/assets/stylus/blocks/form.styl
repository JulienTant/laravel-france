.Form__Fieldset {
  border: 0;
  padding: 0;
  margin: 0;
}

.Form__Fieldset__Legend {
  font-weight: bold;
  font-size: 1.3rem;
  border-bottom: 1px solid $orange;
  display: block;
  width: 100%;
  padding-top: 1.5rem;
}

.Form__Row {
  margin-top 2rem;
}

.Form__Row__Label {
  height 2rem;
  display block
  font-weight bold;

  &--Radio {
    font-weight: normal;
  }
}

.Form__Row__Control {
  line-height 2rem;
  height 2rem;
  width 100%
  padding: 5px 10px;

  &:not([type=file]) {
    border 1px solid $black;
  }


  input[type=checkbox]&, input[type=radio]& {
    display inline-block;
    width auto;
    height auto;

  }

  select[multiple]& {
    height auto;
  }

  textarea& {
    min-height 10rem;
  }
}

.Form__Row--Buttons {
  text-align right;
}

.Form__ErrorList {
  background: #FFD2D2;
  border: 1px solid #FF8383;
  padding: 1rem;
}

.Form__ErrorList__Item {
  margin: 0;
  margin-left: 1rem;
  padding: 0;
}